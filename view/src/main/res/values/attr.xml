<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TxView">
        <attr name="radius" format="dimension"/>
        <attr name="TopRightRadius" format="dimension"/>
        <attr name="TopLeftRadius" format="dimension"/>
        <attr name="BottomLeftRadius" format="dimension"/>
        <attr name="BottomRightRadius" format="dimension"/>
        <!--默认情况下的背景颜色-->
        <attr name="backColor" format="color"/>
        <attr name="startColor" format="color"/>
        <attr name="endColor" format="color"/>
        <!--渐变颜色方向-->
        <attr name="type" format="integer">
            <enum name="top_bottom" value="1"/>
            <enum name="bottom_top" value="2"/>
            <enum name="left_right" value="3"/>
            <enum name="right_left" value="4"/>
            <enum name="leftTop_rightBottom" value="5"/>
            <enum name="rightBottom_leftTop" value="6"/>
            <enum name="rightTop_leftBottom" value="7"/>
            <enum name="leftBottom_rightTop" value="8"/>
        </attr>
        <!--默认情况下的字体颜色-->
        <attr name="normalTextColor" format="color"/>



        <!--边框大小-->
        <attr name="stockWidth" format="dimension"/>
        <!--边框间隙-->
        <attr name="stockDashGap" format="dimension"/>
        <!--边框间隙宽度-->
        <attr name="stockDashWidth" format="dimension"/>
        <!--默认情况下的边框颜色-->
        <attr name="stockColor" format="dimension"/>


        <!--是否开启select属性-->
        <attr name="select" format="boolean"/>
        <!--select为true的情况下 的字体颜色-->
        <attr name="selectTextColor" format="color"/>
        <!--select为true的情况下 的背景颜色-->
        <attr name="selectBackColor" format="color"/>
        <!--select为true的情况下 的边框颜色-->
        <attr name="selectStockColor" format="dimension"/>



        <!--是否开启press属性-->
        <attr name="press" format="boolean"/>
        <!--按下情况下的字体颜色-->
        <attr name="pressTextColor" format="color"/>
        <!--按下情况下的边框颜色-->
        <attr name="pressStockColor" format="dimension"/>
        <!--按下情况下的背景颜色-->
        <attr name="pressBackColor" format="color"/>

    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circleType" format="enum">
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="circleRadius" format="dimension"/>
    </declare-styleable>




    <declare-styleable name="ProgressNumber">

        <attr name="normalColor" format="color"/>
        <attr name="finishColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="start" format="integer"/>
        <attr name="maxProgress" format="integer"/>

    </declare-styleable>


    <declare-styleable name="AutoSizeView">

        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="gravity" format="enum">

            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="center" value="0"/>

        </attr>

    </declare-styleable>



    <declare-styleable name="BottomNavigationBar">

        <attr name="choose_color" format="color"/>
        <attr name="normal_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="image_top" format="dimension"/>
        <attr name="image_size" format="dimension"/>
        <attr name="image_height" format="dimension"/>
        <attr name="image_width" format="dimension"/>
        <attr name="text_top" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="HeaderView">

        <attr name="title" format="string"/>
        <attr name="title_size" format="dimension"/>
        <attr name="text_color" format="color"/>
        <attr name="back_size" format="dimension"/>
        <attr name="back_color" format="color"/>
        <attr name="back_margin" format="dimension"/>
        <attr name="has_line" format="boolean"/>
        <attr name="line_height" format="dimension"/>
        <attr name="line_color" format="color"/>
    </declare-styleable>




    <declare-styleable name="AutoDrawableView">
        <attr name="drawable_height" format="dimension"/>
        <attr name="drawable_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EditClearText">
        <attr name="closeDrawable" format="integer"/>
        <attr name="hideDrawable" format="integer"/>
        <attr name="showDrawable" format="integer"/>
        <attr name="focusColor" format="color"/>
        <attr name="focusWidth" format="color"/>
        <attr name="disFocusColor" format="color"/>
        <attr name="strokeRadius" format="dimension"/>
    </declare-styleable>




    <declare-styleable name="GradualChangeTextView">
        <!--select为true的情况下 的字体颜色-->
        <attr name="selectTextColor" format="color"/>
        <attr name="unselectTextColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>


</resources>